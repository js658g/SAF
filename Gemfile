source 'https://rubygems.org'

gem 'akami'
gem 'capybara', '~> 2.6'            # makes interacting with browser easier
gem 'celerity'                      # wrapper for HtmlUnit headless browser
gem 'cucumber', '~> 2.3'            # A framework for running Gherkin tests
gem 'faraday', '~> 0.9'             # REST/HTTP client for testing webservices
gem 'log4r'                         # For logging locally and remotely
gem 'magic_encoding'                # easily add magic comments to source files
gem 'mime-types', '< 3.0'           # easily query all MimeTypes
gem 'parallel_tests'                # Allows running multiple tests in parallel
gem 'rspec', '~> 3.4'               # Testing framework alternative to Cucumber
gem 'savon', '~> 2.11'              # SOAP Client
gem 'selenium-webdriver'            # Used to interact with the web browser
gem 'site_prism', '~> 2.9'          # Our page object gem for HTML
gem 'pry'                           # Used for debugging
gem 'rake'                          # similar to make, build directives for Ruby
gem 'rubocop', '= 0.39.1.FBFS3'     # rubocop, enforces coding standards
gem 'ruby-debug-ide'                # required for running debug in RubyMine
gem 'rubyXL'                        # For parsing excel files
gem 'thread'                        # Helper methods for working with threads
gem 'tcp_outputter'

